enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Car {
  id: ID! @id
  title: String!
  description: String!
  image: String!
  largeImage: String!
  price: Int!
  model: String!,
  mileage: Int!,
  fuelType: String!,
  transmission: String!,
  year: Int!,
  numOfGears: Int!,
  bodyType: String!,
  numOfDoors: Int!,
  power: Int!,
  color: String!,
  engine: String!,
  driveWheel: String!,
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}